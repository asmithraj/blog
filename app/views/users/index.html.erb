<div class="content-wrapper">
	<div class="row">
		<div class="col-md-7"><strong>Users</strong></div>
		<div class="col-md-3"><strong>Roles</strong></div>
		<div class="col-md-2"><strong>Action</strong></div>
	</div>
	<!-- <p><%= @enum %></p> -->
	<% @users.each do |user| %>
		<%= form_for :user, url: user_update_path(user), method: :patch do |f| %>
			<div class="row">
				<div class="col-md-7"><%= user.email %></div>
				<div class="col-md-3">
					<%= f.select :role, User.roles.keys.to_a, :selected => user.role %>
					<%= user.role %>
				</div>
				<div class="col-md-2"><%= f.submit :class=>"submit form-control" %></div>
			</div>
		<% end %>
	<% end %>
</div>
